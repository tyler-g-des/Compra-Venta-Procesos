@using (Html.BeginForm("View", "PurchaseOrders", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Seleccione</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                @*<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>*@
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label>Suplidor </label>
                        @Html.DropDownList("idSuplidor", null, "<< -Seleccione Suplidor->>", htmlAttributes: new { @class = "form-control select2", required = "required" })
                        @Html.ValidationMessageFor(model => model.suplidor.idSuplidor, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Notas</label>
                        @Html.TextAreaFor(model => model.Notas, htmlAttributes: new { @class = "form-control", @placeholder = "Escriba ...", @rows = "2", @id = "Remarks", required = "required" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Forma de Pago</label>
                        @Html.DropDownList("formaPagoID", null, "<< -Seleccione Forma de Pago->>", htmlAttributes: new { @class = "form-control select2", required = "required" })
                        @Html.ValidationMessageFor(model => model.formaPago.formaPagoID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Forma de Envío</label>
                        @Html.DropDownList("formaEnvioID", null, "<< -Seleccione Forma de Envío->>", htmlAttributes: new { @class = "form-control select2", required = "required" })
                        @Html.ValidationMessageFor(model => model.formaEnvio.formaEnvioID, "", new { @class = "text-danger" })
                    </div>
                    @* moneda*@
                    @*<div class="form-group">
                            <label>Moneda</label>
                            @Html.DropDownList("CurrencyID", null, htmlAttributes: new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.Currency.CurrencyID, "", new { @class = "text-danger" })
                        </div>*@
                </div>
            </div>
        </div>
        <div class="box-footer">
            @*Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                the plugin.*@
        </div>
    </div>

    //Boton de Adicionar Articulo y Guardar la Orden
    <div class="form-group">
        @*<div class="col-md-offset-2 col-md-10">*@
        @* @Html.ActionLink("Adicionar Artículo", "AddArticle", null, new { @Class = "btn btn-success btn-large" })*@

        <!-- modal -->
        <button type="button" class="btn btn-success btn-large" data-toggle="modal" data-target="#adicionarArticulo">Adicionar Artículo</button>

        <input type="submit" value="Guardar Orden" id="SavePurchaseOrder" class="btn btn-instagram" />

        @*</div>*@
    </div>
}

@* CODIGO PARA FORMATEAR LAS DATATABLES *@

@*<h2>Detalles de la orden</h2>*@
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Detalle de la Orden de compra</h3>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        @* HASTA AQUI EL CODIGO PARA FORMATEAR LAS DATATABLES *@

                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.formaPagoArticulo.ArticleCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.formaPagoArticulo.ArticlePurchaseOrderQuantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.formaPagoArticulo.Value)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    @for (int i = 0; i < Model.formaPagoArticulos.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.formaPagoArticulos[i].ArticleCost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.formaPagoArticulos[i].ArticlePurchaseOrderQuantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.formaPagoArticulos[i].Value)
                            </td>
                            <td>
                                @* @Html.ActionLink("Editar", "Edit", new { id = Model.Articles[i].ArticleID }, new { @Class = "btn btn-primary" })*@
                                @Html.ActionLink("Eliminar", "EliminarArticulo", "NewPurchaseOrder", new { id = Model.formaPagoArticulos[i].idArticulo }, new { @Class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
                @* CODIGO PARA FORMATEAR LAS DATATABLES *@
            </div>
        </div>
    </div>
</div>

